---

import Hr from "@components/ui/Hr.astro"

interface Props {
    title: string;
    link: string;
    date: string;
    description?: string;
    hr?:boolean,
}

const { title, link, date, description, hr } = Astro.props;

---

<article>
    <h3 class="mb-2">
        <a
            class="text-xl font-semibold text-neutral-800 hover:underline hover:text-neutral-600 hover:transition:all hover:duration-300 dark:text-white"
            href={link}
            aria-label=`Open Post ${title}`
        >
            {title}
        </a>
    </h3>
    <time class="italic text-neutral-600 dark:text-neutral-400">{date}</time>
    {description && (
        <p class="text-neutral-600 mt-1 text-lg! dark:text-neutral-400">{description}</p> 
    )}
        {hr && (
        <Hr smallMarginTop={true} />
    )}
</article>
