---
interface Props {
    name: string;
    link: string;
    border?: boolean;
}

const { name, link, border } = Astro.props;
---

<li
    class:list={[
        `border-b border-neutral-200 dark:text-neutral-400 dark:border-neutral-700  lg:dark:border-transparent  lg:pb-0 lg:mb-0  lg:border-transparent lg:border-b-4 `,
        {
            "mb-2": !border,
            "pb-2": !border,
            "border-none": border,
        },
    ]}
>
    <a
        class:list={[`text-neutral-900 dark:text-white  relative `]}
        href={`${link}`}
        >{name}

        <div
            transition:name="animation-link"
            class="w-full h-1 bg-blue-300 hidden"
        >
        </div>
    </a>
</li>



<style is:inline>
    li a:hover div {
        background-color: #93cefc;
        transition: all ease 0.3s;
    }
</style>
