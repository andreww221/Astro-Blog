---

interface Props{
    title:string,
    link:string,
    date:string,
}


const {title, link, date} =  Astro.props;

---

<article>
    <h3 class="mb-2">
        <a class="text-xl font-semibold text-neutral-800 hover:underline hover:text-neutral-600 hover:transition:all hover:duration-300 dark:text-white" href={link} aria-label=`Open Post ${title}`>
            {title}
        </a>
    </h3>
    <time  class="italic text-neutral-600 dark:text-neutral-400">{date}</time>
</article>
